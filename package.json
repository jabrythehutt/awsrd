{
  "name": "ec2vsc",
  "version": "1.0.0",
  "description": "Display EC2 instances",
  "main": "./extension.cjs",
  "publisher": "jabrythehutt",
  "keywords": [],
  "author": "Daniel Jabry <djabry@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "2.69.0-alpha.0",
    "@aws-cdk/aws-redshift-alpha": "2.69.0-alpha.0",
    "@aws-cdk/aws-synthetics-alpha": "2.69.0-alpha.0",
    "@aws-sdk/client-ec2": "3.303.0",
    "@aws-sdk/client-ssm": "3.303.0",
    "@aws-sdk/types": "3.303.0",
    "@aws-sdk/smithy-client": "3.303.0",
    "@aws-sdk/client-ec2-instance-connect": "3.303.0",
    "@aws-sdk/credential-providers": "3.303.0",
    "@aws-sdk/shared-ini-file-loader": "3.303.0",
    "aws-cdk-lib": "^2.69.0",
    "cdk-monitoring-constructs": "^3.0.3",
    "constructs": "^10.1.284",
    "sshpk": "^1.17.0",
    "ssm-session": "^1.0.6",
    "yargs": "^17.7.1",
    "tslib": "2.5.0",
    "rxjs": "7.8.0"
  },
  "devDependencies": {
    "@types/vscode": "1.76.0",
    "@types/node": "^18.15.5",
    "@types/sshpk": "^1.17.1",
    "@types/ws": "^8.5.4",
    "@types/yargs": "^17.0.23",
    "aws-cdk": "^2.69.0",
    "esbuild": "^0.17.12",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5"
  },
  "extensionDependencies": [
    "ms-vscode-remote.remote-ssh"
  ],
  "engines": {
    "vscode": "^1.76.0"
  },
  "activationEvents": [],
  "contributes": {
    "configuration": {
      "title": "EC2",
      "properties": {
        "ec2vsc.profile": {
          "type": "string",
          "default": "default",
          "description": "AWS profile"
        },
        "ec2vsc.region": {
          "type": {
            "type": "string",
            "description": "AWS region",
            "enum": [
              "us-east-2",
              "us-east-1",
              "us-west-1",
              "us-west-2",
              "af-south-1",
              "ap-east-1",
              "ap-south-2",
              "ap-southeast-3",
              "ap-southeast-4",
              "ap-south-1",
              "ap-northeast-3",
              "ap-northeast-2",
              "ap-southeast-1",
              "ap-southeast-2",
              "ap-northeast-1",
              "ca-central-1",
              "eu-central-1",
              "eu-west-1",
              "eu-west-2",
              "eu-south-1",
              "eu-west-3",
              "eu-south-2",
              "eu-north-1",
              "eu-central-2",
              "me-south-1",
              "me-central-1",
              "sa-east-1"
            ]
          }
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ec2-explorer",
          "title": "AWS EC2",
          "icon": "media/instances_dark.svg"
        }
      ]
    },
    "views": {
      "ec2-explorer": [
        {
          "id": "ec2Instances",
          "name": "Instances",
          "icon": "media/instances_light.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "ec2Instances.open",
        "title": "Open in new window",
        "icon": {
          "dark": "media/client_dark.svg",
          "light": "media/client_light.svg"
        }
      },
      {
        "command": "ec2Instances.stop",
        "title": "Stop instance",
        "icon": "media/stop_button.svg"
      },
      {
        "command": "ec2Instances.start",
        "title": "Start instance",
        "icon": "media/play_button.svg"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "ec2Instances.stop",
          "group": "inline",
          "when": "viewItem == running"
        },
        {
          "command": "ec2Instances.start",
          "group": "inline",
          "when": "viewItem == stopped"
        },
        {
          "command": "ec2Instances.open",
          "group": "inline",
          "when": "viewItem == stopped || viewItem == running"
        }
      ]
    }
  }
}
